<Window x:Class="Registro.EditarMaestros.EditarMaestros"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestionar Maestros" Height="550" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#37393f">
    <Grid Margin="15">
        <DataGrid x:Name="MaestrosGrid" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="âž• Agregar Nuevo" Click="MenuNuevo_Click"/>
                    <MenuItem Header="ðŸ“ Editar Seleccionado" Click="MenuEditar_Click"/>
                    <MenuItem Header="âŒ Eliminar Seleccionado" Click="MenuEliminar_Click"/>
                </ContextMenu>
            </DataGrid.ContextMenu>
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ID}" Width="50" />
                <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="2*" />
                <DataGridTextColumn Header="Correo" Binding="{Binding Correo}" Width="2*" />
                <DataGridTextColumn Header="Facultad" Binding="{Binding Facultad}" Width="*" />
                <DataGridTextColumn Header="Tipo" Binding="{Binding Tipo}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>