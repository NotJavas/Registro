<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Estilo General del DataGrid -->
    <Style x:Key="DataGridPersonalizado" TargetType="DataGrid">
        <Setter Property="Background" Value="#2C2F33"/>
        <Setter Property="Foreground" Value="#FFFFFF"/>
        <Setter Property="BorderBrush" Value="#4F545C"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="HorizontalGridLinesBrush" Value="#4F545C"/>
        <Setter Property="VerticalGridLinesBrush" Value="#4F545C"/>
        <Setter Property="RowBackground" Value="#2C2F33"/>
        <Setter Property="AlternatingRowBackground" Value="#23272A"/>
    </Style>

    <!-- Estilo para los Encabezados de Columna -->
    <Style x:Key="DataGridHeaderPersonalizado" TargetType="{x:Type DataGridColumnHeader}">
        <Setter Property="Background" Value="#23272A"/>
        <Setter Property="Foreground" Value="#FFFFFF"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Padding" Value="10,5"/>
        <Setter Property="BorderBrush" Value="#4F545C"/>
        <Setter Property="BorderThickness" Value="0,0,0,2"/>
    </Style>

    <!-- Estilo para las Filas -->
    <Style x:Key="DataGridRowPersonalizado" TargetType="DataGridRow">
        <Setter Property="Background" Value="{Binding RelativeSource={RelativeSource Self}, Path=AlternatingRowBackground}"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#4F545C"/>
            </Trigger>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="#5865F2"/>
                <Setter Property="Foreground" Value="#FFFFFF"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Estilo para las Celdas -->
    <Style x:Key="DataGridCellPersonalizado" TargetType="DataGridCell">
        <Setter Property="Padding" Value="10,5"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type DataGridCell}">
                    <Border Padding="{TemplateBinding Padding}" 
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Background="{TemplateBinding Background}"
                            SnapsToDevicePixels="True">
                        <ContentPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Foreground" Value="#FFFFFF"/>
            </Trigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>
