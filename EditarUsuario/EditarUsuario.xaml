<Window x:Class="Registro.EditarUsuarios.EditarUsuario"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestionar Usuarios" Height="550" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#37393f"
        Closing="Window_Closing">
    <Grid Margin="15">
        <DataGrid Grid.Row="1"
                  x:Name="UserGrid"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  SelectionUnit="FullRow">
            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="âž• Agregar Nuevo" Click="MenuNuevo_Click"/>
                    <MenuItem Header="ðŸ“ Editar Seleccionado" Click="MenuEditar_Click"/>
                    <MenuItem Header="âŒ Eliminar Seleccionado" Click="MenuEliminar_Click"/>
                </ContextMenu>
            </DataGrid.ContextMenu>
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ID}" IsReadOnly="True" Width="50" />
                <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="*" />
                <DataGridTextColumn Header="Clave" Binding="{Binding Clave}" Width="*" />
                <DataGridTextColumn Header="Correo" Binding="{Binding Correo}" Width="2*" />
                <DataGridTextColumn Header="Tipo" Binding="{Binding Tipo}" Width="100" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>