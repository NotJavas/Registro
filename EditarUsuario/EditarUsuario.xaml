<Window x:Class="Registro.EditarUsuarios.EditarUsuario"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestionar Usuarios" Height="550" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#37393f"
        Closing="Window_Closing"> <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <RowDefinition Height="*"/>    </Grid.RowDefinitions>

        <Border Grid.Row="0"
                Background="#404249"
                CornerRadius="5"
                Padding="15"
                Margin="0,0,0,10">
            <StackPanel>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <Label Content="ID:" Grid.Row="0" Grid.Column="0" Style="{StaticResource TextLabel}"/>
                    <TextBox x:Name="TxtId" Grid.Row="0" Grid.Column="1" Style="{StaticResource TextBox}" IsReadOnly="True" Margin="5"/>

                    <Label Content="Usuarios Totales:" Grid.Row="0" Grid.Column="2" Style="{StaticResource TextLabel}"/>
                    <Label x:Name="UsuariosTotales" Grid.Row="0" Grid.Column="3" Style="{StaticResource TextLabel}"/>
                    
                    <Label Content="Nombre:" Grid.Row="1" Grid.Column="0" Style="{StaticResource TextLabel}"/>
                    <TextBox x:Name="TxtNombre" Grid.Row="1" Grid.Column="1" Style="{StaticResource TextBox}" Margin="5"/>

                    <Label Content="Correo:" Grid.Row="1" Grid.Column="2" Style="{StaticResource TextLabel}" Margin="15,0,0,0"/>
                    <TextBox x:Name="TxtCorreo" Grid.Row="1" Grid.Column="3" Style="{StaticResource TextBox}" Margin="5"/>

                    <Label Content="Clave:" Grid.Row="2" Grid.Column="0" Style="{StaticResource TextLabel}"/>
                    <TextBox x:Name="TxtClave" Grid.Row="2" Grid.Column="1" Style="{StaticResource TextBox}" Margin="5"/>
                
                    <Label Content="Tipo:" Grid.Row="2" Grid.Column="2" Style="{StaticResource TextLabel}" Margin="15,0,0,0"/>
                    <TextBox x:Name="TxtTipo" Grid.Row="2" Grid.Column="3" Style="{StaticResource TextBox}" Margin="5"/>
                </Grid>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Button x:Name="BotonNuevo" Content="Nuevo" Click="BotonNuevo_Click" Width="120" Margin="5" Style="{StaticResource LoginButton}"/>
                    <Button x:Name="BotonGuardar" Content="Guardar" Click="BotonGuardar_Click" Width="120" Margin="5" Style="{StaticResource LoginButton}"/>
                    <Button x:Name="BotonEliminar" Content="Eliminar" Click="BotonEliminar_Click" Width="120" Margin="5" Style="{StaticResource LoginButton}"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <DataGrid Grid.Row="1" 
                  x:Name="UserGrid"
                  AutoGenerateColumns="False" 
                  IsReadOnly="True"
                  SelectionMode="Single"
                  SelectionUnit="FullRow"
                  SelectionChanged="UserGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ID}" IsReadOnly="True" Width="50" />
                <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="*" />
                <DataGridTextColumn Header="Clave" Binding="{Binding Clave}" Width="*" />
                <DataGridTextColumn Header="Correo" Binding="{Binding Correo}" Width="2*" />
                <DataGridTextColumn Header="Tipo" Binding="{Binding Tipo}" Width="100" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>