<Window x:Class="Registro.EditarAlumnos.EditarAlumnos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestionar Alumnos" Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#37393f"
        Loaded="Window_Loaded"
        Closing="Window_Closing">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#404249" CornerRadius="5" Padding="15" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/><ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/><ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/><RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/><RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Content="Expediente:" Grid.Row="0" Grid.Column="0" Style="{StaticResource TextLabel}"/>
                <TextBox x:Name="TxtExpediente" Grid.Row="0" Grid.Column="1" Style="{StaticResource TextBox}" Margin="5"/>

                <Label Content="Nombre:" Grid.Row="1" Grid.Column="0" Style="{StaticResource TextLabel}"/>
                <TextBox x:Name="TxtNombre" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" Style="{StaticResource TextBox}" Margin="5"/>

                <Label Content="Correo:" Grid.Row="2" Grid.Column="0" Style="{StaticResource TextLabel}"/>
                <TextBox x:Name="TxtCorreo" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" Style="{StaticResource TextBox}" Margin="5"/>

                <Label Content="Semestre:" Grid.Row="3" Grid.Column="0" Style="{StaticResource TextLabel}"/>
                <TextBox x:Name="TxtSemestre" Grid.Row="3" Grid.Column="1" Style="{StaticResource TextBox}" Margin="5"/>
                
                <Label Content="Edad:" Grid.Row="0" Grid.Column="2" Style="{StaticResource TextLabel}" Margin="15,0,0,0"/>
                <TextBox x:Name="TxtEdad" Grid.Row="0" Grid.Column="3" Style="{StaticResource TextBox}" Margin="5"/>

                <Label Content="GÃ©nero:" Grid.Row="3" Grid.Column="2" Style="{StaticResource TextLabel}" Margin="15,0,0,0"/>
                <TextBox x:Name="TxtGenero" Grid.Row="3" Grid.Column="3" Style="{StaticResource TextBox}" Margin="5"/>
            </Grid>
        </Border>

        <DataGrid Grid.Row="1" x:Name="AlumnosGrid" AutoGenerateColumns="False" IsReadOnly="True" SelectionChanged="AlumnosGrid_SelectionChanged">
            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="âž• Agregar Nuevo" Click="MenuNuevo_Click"/>
                    <MenuItem Header="ðŸ’¾ Guardar Cambios" Click="MenuGuardar_Click"/>
                    <MenuItem Header="âŒ Eliminar Seleccionado" Click="MenuEliminar_Click"/>
                </ContextMenu>
            </DataGrid.ContextMenu>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Expediente" Binding="{Binding Expediente}" Width="*" />
                <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="2*" />
                <DataGridTextColumn Header="Semestre" Binding="{Binding Semestre}" Width="*" />
                <DataGridTextColumn Header="Correo" Binding="{Binding Correo}" Width="2*" />
                <DataGridTextColumn Header="Edad" Binding="{Binding Edad}" Width="80" />
                <DataGridTextColumn Header="GÃ©nero" Binding="{Binding Genero}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>