<Window x:Class="Registro.EditarAlumnos.EditarAlumnos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestión de Alumnos" 
        Height="650" Width="800" 
        WindowStartupLocation="CenterScreen"
        Background="#37393f">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- DataGrid para mostrar los alumnos -->
        <DataGrid x:Name="AlumnosGrid" Grid.Row="0" 
                  AutoGenerateColumns="False" 
                  IsReadOnly="True"
                  SelectionChanged="AlumnosGrid_SelectionChanged"
                  Style="{StaticResource DataGridPersonalizado}" 
                  ColumnHeaderStyle="{StaticResource DataGridHeaderPersonalizado}" 
                  RowStyle="{StaticResource DataGridRowPersonalizado}" 
                  CellStyle="{StaticResource DataGridCellPersonalizado}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Expediente" Binding="{Binding Expediente}" Width="100"/>
                <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="*"/>
                <DataGridTextColumn Header="Semestre" Binding="{Binding Semestre}" Width="80"/>
                <DataGridTextColumn Header="Correo" Binding="{Binding Correo}" Width="2*"/>
                <DataGridTextColumn Header="Edad" Binding="{Binding Edad}" Width="60"/>
                <DataGridTextColumn Header="Género" Binding="{Binding Genero}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Formulario de Edición/Creación -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label Content="Expediente:" Grid.Row="0" Grid.Column="0" Style="{StaticResource TextLabel}"/>
            <TextBox x:Name="TxtExpediente" Grid.Row="0" Grid.Column="1" Style="{StaticResource TextBox}" Margin="5"/>

            <Label Content="Nombre:" Grid.Row="1" Grid.Column="0" Style="{StaticResource TextLabel}"/>
            <TextBox x:Name="TxtNombre" Grid.Row="1" Grid.Column="1" Style="{StaticResource TextBox}" Margin="5"/>

            <Label Content="Semestre:" Grid.Row="2" Grid.Column="0" Style="{StaticResource TextLabel}"/>
            <TextBox x:Name="TxtSemestre" Grid.Row="2" Grid.Column="1" Style="{StaticResource TextBox}" Margin="5"/>

            <Label Content="Correo:" Grid.Row="3" Grid.Column="0" Style="{StaticResource TextLabel}"/>
            <TextBox x:Name="TxtCorreo" Grid.Row="3" Grid.Column="1" Style="{StaticResource TextBox}" Margin="5"/>

            <Label Content="Edad:" Grid.Row="4" Grid.Column="0" Style="{StaticResource TextLabel}"/>
            <TextBox x:Name="TxtEdad" Grid.Row="4" Grid.Column="1" Style="{StaticResource TextBox}" Margin="5"/>

            <Label Content="Género:" Grid.Row="5" Grid.Column="0" Style="{StaticResource TextLabel}"/>
            <TextBox x:Name="TxtGenero" Grid.Row="5" Grid.Column="1" Style="{StaticResource TextBox}" Margin="5"/>

            <StackPanel Grid.Row="0" Grid.Column="2" Grid.RowSpan="6" VerticalAlignment="Center">
                <Button Content="Guardar" Click="Guardar_Click" Style="{StaticResource LoginButton}" Margin="5"/>
                <Button Content="Nuevo" Click="Nuevo_Click" Style="{StaticResource LoginButton}" Margin="5"/>
                <Button Content="Eliminar" Click="Eliminar_Click" Style="{StaticResource LoginButton}" Margin="5"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
